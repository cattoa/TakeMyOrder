<p id="notice"><%= notice %></p>

<h1>Listing Menu Item Options</h1>

<table>
  <thead>
    <tr>
      <th>Code</th>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @menu_item_options.each do |menu_item_option| %>
      <tr>
        <td><%= menu_item_option.code %></td>
        <td><%= menu_item_option.name %></td>
        <td><%= menu_item_option.description %></td>
        <td><%= link_to 'Show', menu_item_option %></td>
        <td><%= link_to 'Edit', edit_menu_item_option_path(menu_item_option) %></td>
        <td><%= link_to 'Destroy', menu_item_option, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

