%h1 Listing Tables
%table.table
  %thead
    %tr
      %th Number
      %th Max seats
      %th{colspan: "3"}
  %tbody
    - @tables.each do |table|
      %tr
        %td= table.number
        %td= table.max_seats
        %td= link_to 'Show', table, class: 'btn btn-success btn-sm'
        %td= link_to 'Edit', edit_table_path(table), class: 'btn btn-success btn-sm'
        %td= link_to 'Destroy', table, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-success btn-sm'
%br/
= link_to 'New Table', new_table_path, class: 'btn btn-success'
%div
  %p#notice= notice
