= form_for(@table) do |f|
  - if @table.errors.any?
    #error_explanation
      %h2
        = pluralize(@table.errors.count, "error")
        prohibited this table from being saved:
      %ul
        - @table.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :number
    %br/
    = f.number_field :number
  .field
    = f.label :max_seats
    %br/
    = f.number_field :max_seats
  .actions
    = f.submit
